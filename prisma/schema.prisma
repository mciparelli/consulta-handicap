generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model handicap {
  date          DateTime  @db.Date
  handicapIndex Float     @db.Real
  matricula     Int
  jugadores     jugadores @relation(fields: [matricula], references: [matricula], onDelete: NoAction, onUpdate: NoAction)

  @@id([date, matricula])
}

model jugadores {
  matricula Int        @id @unique
  fullName  String     @default("")
  clubName  String     @default("")
  handicap  handicap[]
}
