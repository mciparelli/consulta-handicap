generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_LOCATION")
}

model handicap {
  date          DateTime
  handicapIndex Float
  matricula     Int
  jugadores     jugadores @relation(fields: [matricula], references: [matricula], onDelete: NoAction, onUpdate: NoAction)

  @@id([date, matricula])
}

model jugadores {
  matricula Int        @id @unique @default(autoincrement())
  fullName  String
  clubName  String
  handicap  handicap[]
}
